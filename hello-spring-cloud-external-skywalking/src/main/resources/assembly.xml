<assembly>
	<id>6.1.0</id>
	<formats>
		<!--打包文件的格式-->
		<format>tar.gz</format>
	</formats>
	<!--压缩包下是否生成和项目名相同的根目录-->
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<!--是否把本项目添加到依赖文件夹下-->
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<!--将scope为runtime的依赖打包-->
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<!--设置需要打包的文件路径-->
			<directory>agent</directory>
			<!--打包后的输出路径-->
			<outputDirectory></outputDirectory>
		</fileSet>
	</fileSets>
</assembly>